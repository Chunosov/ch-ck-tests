{
  "compile_deps": {
    "compiler": {
      "local": "yes", 
      "name": "C++ compiler", 
      "sort": 0, 
      "tags": "compiler,lang-cpp"
    }
  },
  "process_in_tmp": "yes", 
  "program": "yes",
  "compiler_env": "CK_CXX",
  "main_language": "cpp", 
  "only_for_target_os_tags": [
    "linux",
    "android"
  ],
  "run_cmds": {
    "default": {
      "run_time": {
        "run_cmd_main": "$#BIN_FILE#$"
      }
    }
  },
  "source_files": [
    "hello.cpp"
  ],
  "skip_bin_ext": "yes",
  "target_file": "hello"
}
